<div class="row">
	<div id="msg"></div>
	<div class="col-sm-12">
	<%= form_for @customer, html: { :class => "form-horizontal"} do |f| %>
	  	<div class="panel-group">
			<div class="panel panel-default">
				<div class="panel-heading">Personal Details</div>
				<div class="panel-body">					
					<div class="form-group">					
						<%= f.label :ic, "Identification Number", {:class => "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.text_field :ic,{:class => "form-control"} %>
						</div>
					</div>

					<div class="form-group">					
						<%= f.label :phone, "Phone Number", {:class => "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.text_field :phone,{:class => "form-control"} %>
						</div>
					</div>

					<div class="form-group">					
						<%= f.label :email, "Email", {:class => "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.text_field :email,{:class => "form-control"} %>
						</div>
					</div>

					<div class="form-group">					
						<%= f.label :address, "Current Address", {:class => "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.text_area :address,{:class => "form-control", :size => "15x5"} %>
						</div>
					</div>
					<div class="form-group">
						<%= f.label :gender, "Gender", {:class => "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<div class="radio">
								<label>
									<%= f.radio_button :gender,"Male" %> Male
								</label>
							</div>
							<div class="radio">
								<label>
									<%= f.radio_button :gender,"Female" %> Female
								</label>
							</div>
						</div>
					</div>

					
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					Authentication Information
				</div>
				<div class="panel-body">
					<div class="form-group">
						<%= f.label :username, { class: "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.text_field :username, { class: "form-control"} %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :password, { class: "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.password_field :password, { class: "form-control"} %>
						</div>
					</div>

					<!-- <div class="form-group">
						<%= f.label :password_confirmation, { class: "col-sm-4 control-label"} %>
						<div class="col-sm-4">
							<%= f.password_field :password_confirmation, { class: "form-control"} %>
						</div>
					</div> -->
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-body">
					<%= f.submit "Create New Customer", { :class => "pull-right" } %>
				</div>
			</div>
	  	</div>
	<% end %>
	</div> 
</div>