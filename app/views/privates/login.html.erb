<div class="row">
<%= form_tag '/privates', method: 'post' do %>
	<div class="panel panel-default">
		<div class="panel-heading">
			Login Information
		</div>
		<div class="panel-body">
			<div class="form-group">
				<%= label_tag :username,"Username",{class: "control-label"} %>
				<%= text_field_tag :username,'', { :class => "form-control"} %>
			</div>
			<div class="form-group">
				<%= label_tag :password,"Password",{class: "control-label"} %>
				<%= password_field_tag :password,'', { :class => "form-control"} %>
			</div>			
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-body">
			<%= submit_tag "Login Now", { :class => "pull-right" } %>
		</div>
	</div>
<% end %>
</div>
