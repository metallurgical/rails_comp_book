<!DOCTYPE html>
<html>
<head>
  <title>EComputer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
	<div class="navbar-header">
		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#myNav" aria-expanded="false">
			<span class="sr-only">Toggle Navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
	<a class="navbar-brand">e-Computer</a>
	</div>

	<div class="collapse navbar-collapse" id="myNav">
		<% if isAdmin %>
		<ul class="nav navbar-nav">
			<li>
			<%= link_to "Home", root_path%>
			</li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Product Management <span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<%= link_to "Add New Product", new_product_path %>
					</li>
					<li><a>Edit/Delete</a></li>
				</ul>
			</li>
		    <li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Category Management <span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>
						<%= link_to "Add New Category", new_category_path %>
					</li>
					<li>
						<%= link_to "Display Categories", categories_path %>
					</li>
				</ul>
			</li>			
		</ul>
		<% else	%>
		<ul class="nav navbar-nav">
			<li>
			<%= link_to "Home", root_path%>
			</li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Dropdown <span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li><a>HDD</a></li>
					<li><a>CDROM</a></li>
				</ul>
			</li>
			<li>
				<%= link_to "Register Account", new_customer_path %>
			</li>
		</ul>
		<% end	%>
	</div>

</nav>
<div class="container">
	<div class="page-header">
		<h2><%= @title %></h2>
	</div>
	<%= yield %>
</div>

</body>
</html>
